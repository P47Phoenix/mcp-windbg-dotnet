{
  "Server": {
    "Version": "0.2.0",
    "Implementation": "mcp-windbg-dotnet",
    "ConfigReloadSeconds": 30
  },
  "Sessions": {
    "MaxConcurrentSessions": 5,
    "IdleTimeoutMinutes": 10,
    "DumpSearchPaths": [
      "C:\\Windows\\Minidump",
      "C:\\CrashDumps", 
      "C:\\Dumps"
    ]
  },
  "Policy": {
    "Enabled": true,
    "AllowByDefault": false,
    "AllowedCommands": [
      ".lastevent",
      "!analyze", 
      "!analyze -v",
      "k", "kb", "kn", "kp", "kv",
      "~", "~*",
      "lm", "lmv", "lmf", 
      "r", "rd", "rm",
      ".echo", ".help", "?", "??",
      "version", ".time"
    ],
    "AllowedPatterns": [
      "^k[bnpv]?\\s*\\d*$",
      "^~\\d*[ks]?$",
      "^lm[vf]*\\s*\\w*$",
      "^r\\s+\\w+$",
      "^\\.echo\\s+.*"
    ],
    "DeniedPatterns": [
      "\\.shell",
      "\\.cmd", 
      "\\.load",
      "\\.restart",
      "\\.crash",
      "\\.kill",
      "bp\\s",
      "g\\s",
      "t\\s"
    ]
  },
  "Features": {
    "SessionManagement": true,
    "PolicyEnforcement": true,
    "ManagedAnalysis": false,
    "MetricsCollection": true
  }
}
